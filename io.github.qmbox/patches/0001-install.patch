\ No newline at end of file
diff --git a/qmbox.pro b/qmbox.pro
index a43a66f..0d1d841 100644
--- a/qmbox.pro
+++ b/qmbox.pro
@@ -12,4 +12,9 @@ SOURCES         += qmbox.cpp
 target.path	= $${PREFIX}/bin
 TARGET          = qmbox
 QTDIR_build:REQUIRES="contains(QT_CONFIG, full-config)"
-INSTALLS	+= target
+BINDIR = $$PREFIX/bin
+DATADIR = $$PREFIX/share
+target.path = $$BINDIR
+desktop.files =qmbox.desktop
+desktop.path = $$DATADIR/applications/
+INSTALLS += target desktop
